.content-section-tlp
  color: $white;
  background-color: #101010;

  > .inner
    width: 100%;
    position: relative;
    padding: 120px 24px 0;
    text-align: center;

    @media $desktop
      padding: 160px 120px 0;
      text-align: left;

  > .inner > .title
    display: inline-block;
    font-family: 'Spartan', sans-serif;
    font-size: 3.2rem;
    font-weight: 700;
    line-height: 1.3;
    color: #003FBA;
    background: -webkit-linear-gradient(0deg, #003FBA, #B30000);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    margin-bottom: 48px;

    @media $desktop
      font-size: 5.0rem;

  > .inner > .content
    font-size: 1.6rem;
    text-align: left;
    margin-bottom: 100px;

    &:last-of-type
      margin-bottom: 0;

    @media $desktop
      display: flex;

  > .inner > .content.-rl

    @media $desktop
      flex-flow: row-reverse;

  > .inner > .content > .textarea
    line-height: 1.5;

    @media $desktop
      flex: 0 1 640px;
      margin-right: 80px;

  > .inner > .content .subTitle
    font-size: 2.0rem;
    font-weight: bold;
    line-height: 1.3;
    margin-bottom: 16px;

  > .inner > .content .text
    line-height: 1.5;
    margin-bottom: 32px;

    &:last-of-type
      margin-bottom: 0;

  > .inner > .content .btn
    margin-top: 48px;

  > .inner > .content > .img
    flex: 1 1 480px;

  > .inner > .content > .img > img
    border-radius: 12px;
    margin-top: 32px;

    @media $desktop
      margin-top: 0;

  > .inner > .content.-rl > .img > img
    margin-top: 0;

  > .inner > .content > .img > .name
    font-size: 1.6rem;
    font-weight: bold;
    line-height: 1.3;
    text-align: left;
    margin-top: 24px;
    margin-bottom: 48px;

    @media $desktop
      text-align: center;
      margin-top: 16px;
      margin-bottom: 0;

  > .inner > .content > .img .date
    font-size: 1.2rem;
    font-weight: normal;
    margin-left: 16px;

  > .inner > .content > .img .logo
    margin-left: 16px;

  > .inner > .content .listItem
    padding-left: 2em;
    margin-bottom: 32px;

    &:last-child
      margin-bottom: 0;

  > .inner > .content .listItem > .text
    list-style: disc outside;
    margin-bottom: 0;
