.hero-section-careers
  width: 100%;
  color: $black;
  padding: 136px 24px 160px;

  @media $desktop
    padding: 180px 60px 240px;

  > .heading
    color: $black;
    font-feature-settings: "palt";
    font-size: 4.5rem;
    font-weight: bold;
    letter-spacing: 0.1rem;
    line-height: 1.3;

    @media $desktop
      font-size: 9.5rem;
      line-height: 1;

  > .heading > .mobile
    @media $desktop
      display: none;
