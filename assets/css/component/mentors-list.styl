.mentors-list

  @media $desktop
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;

  > .item
    margin-bottom: 48px;

    &:last-of-type
      margin-bottom: 0;

    @media $desktop
      flex: 1 1 50%;
      display: flex;

      &:nth-of-type(3)
        margin-bottom: 0;

  > .item > .img
    margin-bottom: 24px;

    @media $desktop
      flex: 0 1 240px;
      margin-bottom: 0;
      margin-right: 24px;

  > .item > .img > img
    border-radius: 12px;

  > .item > .textarea
    text-align: left;

    @media $desktop
      flex: 0 1 312px;

  > .item > .textarea > .subTitle
    font-size: 1.6rem;
    font-weight: bold;
    margin-bottom: 16px;

  > .item > .textarea > .subTitle .logo
    margin-left: 16px;

  > .item > .textarea > .text
    font-size: 1.4rem;
    line-height: 1.5;
