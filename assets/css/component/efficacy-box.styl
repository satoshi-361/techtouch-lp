.efficacy-box
  @media $desktop
    width: 80%;
    margin: 0 auto;

  > .img
    display: block;

    &.-efficacy01
      margin-bottom: 48px;

      @media $desktop
        width: 80%;
        margin: 0 auto 80px;

    &.-efficacy02
      margin: 24px 0 16px;

      @media $desktop
        margin: 40px 0 24px;

  > .text
    font-size: 1.6rem;
    font-weight: bold;
    margin-bottom: 16px;
    display: inline-block;

    @media $desktop
      font-size: 2.4rem;
      text-align: center;
      margin-bottom: 24px;
      display: block;

  > .text > .emphasis
    font-size: 2.2rem;
    background-color: lighten($secondary-color, 20);
    display: inline-block;
    margin-top: 8px;

    @media $desktop
      font-size: 3.2rem;
      margin-left: 12px;

  > .text > br
    @media $desktop
      display: none;

  > .note
    color: darken($gray, 25);
    font-size: 1.4rem;
    line-height: 1.8;
