.article-heading
  margin-bottom: 64px;

  .title
    font-size: 2.4rem;
    font-feature-settings: "palt";
    letter-spacing: 0.1rem;
    font-weight: bold;
    line-height: 1.5;
    margin-bottom: 40px;

    @media $desktop
      font-size: 2.8rem;

  .date,
  .author
    color: $gray;
    font-size: 1.2rem
    line-height: 1;
    margin: 8px 0 0;

  .date
    font-family: 'Open Sans', sans-serif;

  .mainImg
    margin: 64px -24px 0;

    @media $desktop
      max-width: 1024px;
      margin: 64px -192px 0;

  .mainImg > .img
    width: 100%;
    border-radius: 0;

    @media $desktop
      border-radius: 6px;
