.contact-box-saas-plan
  width: 100%;
  background-color: $white;
  color: $white;
  text-align: center;
  border-radius: 6px;
  padding: 32px 24px;
  box-shadow: 0px 0px 12px 0px rgba(0, 0, 0, 0.15);

  @media $desktop
    width: calc(100% - 24px);
    padding: 56px 80px;
    margin: auto;

  > .title
    color: darken($gray, 25);
    font-feature-settings: "palt";
    letter-spacing: 0.1rem;
    font-size: 2.2rem;
    font-weight: bold;
    line-height: 1.3;
    text-align: center;
    margin-bottom: 24px;

    @media $desktop
      font-size: 3.2rem;
      margin-bottom: 40px;

  > .btn
    margin: auto;
