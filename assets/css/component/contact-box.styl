.contact-box
  width: 100%;
  background-color: lighten($black, 10);
  color: $white;
  text-align: center;
  border-radius: 6px;
  padding: 32px 24px;

  @media $desktop
    padding: 56px 80px;

  > .title
    font-feature-settings: "palt";
    letter-spacing: 0.1rem;
    font-size: 2.2rem;
    font-weight: bold;
    line-height: 1.3;
    text-align: center;
    margin-bottom: 24px;

    @media $desktop
      font-size: 3.2rem;
      margin-bottom: 40px;

  > .title > .smallText
    font-size: 1.3rem;

    @media $desktop
      font-size: 2rem;

  > .title > br
    display: none;

    @media $desktop
      display: inline;

  > .content
    font-size: 1.4rem;
    line-height: 1.5;
    text-align: left;
    margin-bottom: 24px;

    @media $desktop
      font-size: 1.8rem;
      text-align: center;
      margin-bottom: 32px;

  > .btn
    margin: auto;
