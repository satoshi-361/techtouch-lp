.hero-message-saas-plan
  font-feature-settings: "palt";
  letter-spacing: 0.1rem;
  text-align: center;

  > .heading
    color: $primary-color;
    font-size: 2.4rem;
    font-weight: bold;
    line-height: 1.7;

    @media $desktop
      font-size: 4.2rem;

  > .heading > .emphasize
    font-size: 3.6rem;
    line-height: 1.3;

    @media $desktop
      font-size: 5.4rem;
      line-height: inherit;

  > .heading .mobile
    @media $desktop
      display: none;

  > .btn
    margin: 24px auto 40px;

    @media $desktop
      margin: 48px auto 80px;

  > .mobile
    width: 90%;

    @media $desktop
      display: none;

  > .desktop
    display: none;

    @media $desktop
      display: block;
