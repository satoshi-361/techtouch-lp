.media-header-section
  width: 100%;
  height: 48px;
  padding: 0 12px;
  background-color: $white;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 9999;
  transition: all 0.3s;

  @media $desktop
    height: 64px;
    padding: 0 24px;

  > .logo
    transition: all 0.3s;

    &.-desktop
      display: none;

    width: 32px;

    @media $desktop
      &.-mobile
        display: none;

      &.-desktop
        display: block;

      width: 200px;

  &.-transparent
    background-color: transparent;

    > .logo
      display: none;

    > .logo.-mobile.-transparent
      display: block;

      @media $desktop
        display: none;

    > .logo.-desktop.-transparent
      display: none;

      @media $desktop
        display: block;

    > .global-navigation > .item > .link
      color: $white;

      @media $desktop
        &:hover
          background-color: darken($primary-color, 10)

      &.-btn
        &.-blue
          color: $white;
          border-color: $white;

        @media $desktop
          &.-blue, &.-orange
            color: $white;

  &.-fixed
    @media $desktop
      height: 48px;
      padding-left: 12px;

      > .logo
        @media $desktop
          width: 160px;

  &.-transparent.-fixed
    background-color: $white;

    > .logo.-mobile.-transparent,
    > .logo.-desktop.-transparent
      display: none;

    > .logo.-mobile
      display: block;

      @media $desktop
        display: none;

    > .logo.-desktop
      display: none;

      @media $desktop
        display: block;

    > .global-navigation > .item > .link
      color: darken($gray, 25);

      @media $desktop
        &:hover
          background-color: lighten($gray, 35)

      &.-btn
        &.-blue
          color: $primary-color;
          border-color: $primary-color;

        &.-orange
          color: $white;

        @media $desktop
          &.-blue, &.-orange
            color: darken($gray, 25);