.faq-list
  margin-top: 32px;

  @media $desktop
    width: 670px;
    margin: 64px auto 0;

  > .item
    border-bottom: 1px solid lighten($gray, 30);
    padding-bottom: 32px;
    margin-bottom: 32px;

    @media $desktop
      padding-bottom: 40px;
      margin-bottom: 40px;

    &:last-child
      border-bottom: none;
      padding-bottom 0;
      margin-bottom: 0;

  > .item > .text
    &.-question
      font-size: 1.6rem;
      font-weight: bold;
      line-height: 1.5;
      margin-bottom: 16px;

      @media $desktop
        font-size: 1.8rem;
        margin-bottom: 24px;

    &.-answer
      color: darken($gray, 25);
      font-size: 1.4rem;
      line-height: 1.7;

      @media $desktop
        font-size: 1.6rem;

  > .item > .btn
    margin-top: 24px;

  > .item > .text > .label
    margin-right: 8px;
