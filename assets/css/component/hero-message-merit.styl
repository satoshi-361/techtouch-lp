.hero-message-merit
  > .heading
    font-feature-settings: "palt";
    letter-spacing: 0.1rem;
    font-size: 3.6rem;
    font-weight: bold;
    line-height: 1.5;

    @media $desktop
      font-size: 4.2rem;

  > .heading > .largeText
    font-size: 6.2rem;
    line-height: 0.8;
    margin-right: 8px;

    @media $desktop
      font-size: 6.8rem;

  > .heading > .smallText
    font-size: 1.6rem;
    line-height: 1;

    @media $desktop
      font-size: 2rem;
