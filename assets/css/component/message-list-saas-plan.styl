.message-list-saas-plan
  margin-top: 24px;

  @media $desktop
    display: flex;
    justify-content: space-between;
    margin: 40px 12px 0;

  .item
    display: block;
    width: 100%;
    color: $primary-color;
    font-size: 1.8rem;
    font-weight: 700;
    line-height: 1.5;
    text-align: center;
    background-color: $white;
    padding: 20px 0;
    border-radius: 6px;
    box-shadow: 0px 0px 12px 0px rgba(0, 0, 0, 0.15);
    position:relative;
    margin-top: 16px;

    @media $desktop
      width: calc((100% - 56px) / 3)
      margin: 0;

  .item > .smallText
    font-size: 1.4rem;
    font-weight: normal;
