.index-box
  padding: 24px;
  border-radius: 6px;
  border: solid 1px lighten($gray, 30);
  margin: 64px 0;

  > .title
    color: darken($gray, 25);
    font-size: 1.6rem;
    font-weight: bold;
    line-height: 1.3;
    margin-bottom: 20px;

  > .indexList
    margin-top: 20px;

  > .indexList > .item
    line-height: 1.3;
    margin: 0 0 16px;
    list-style-type: none;

    &:last-child
      margin-bottom: 0;

  > .indexList > .item > .link
    color: darken($gray, 25);
    font-size: 1.2rem;
    line-height: 1.3;

    @media $desktop
      &:hover
        text-decoration: underline;
