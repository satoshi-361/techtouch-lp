.video-box
  position:relative;

  > .video
    position:relative;
    width: 100%;
    padding-top: 56.25%;

  > .video > .iframe
    position:absolute;
    top: 0;
    right: 0;
    width: 100%;
    height: 100%;

  > .account-counter
    position: absolute;
    top: -28px;
    right: -24px;

    @media $desktop
      top: inherit;
      right: -72px;
      bottom: -56px;
