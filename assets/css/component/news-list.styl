.news-list
  > .item
    border-bottom: 1px solid lighten($gray, 30);
    padding-bottom: 16px;
    margin-bottom: 16px;

    &:last-child
      border-bottom: none;
      padding-bottom: 0;
      margin-bottom: 0;

  > .item > .inner
    @media $desktop
      display: flex;
      align-items: flex-start;

  > .item > .inner > .sub
    display: flex;
    align-items: center;

    @media $desktop
      flex: 0 0 auto;
      margin-right: 12px;


  > .item > .inner > .sub > .date
    color: darken($gray, 25);
    font-size: 1.4rem;
    font-family: 'Open Sans', sans-serif;
    width: 78px;

    @media $desktop
      font-size: 1.6rem;
      line-height: 1.5;
      width: 92px;

  > .item > .inner > .sub > .label
    color: darken($gray, 25);
    font-size: 1rem;
    background-color: lighten($gray, 35);
    border-radius: 3px;
    width: 78px;
    height: 18px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-left: 8px;

  > .item > .inner > .content
    color: $gray;

  > .item > .inner > .content > .link
    color: darken($gray, 25);

    @media $desktop
      hover-element();

  > .item > .inner > .content,
  > .item > .inner > .content > .link
    font-size: 1.4rem;
    line-height: 1.5;
    margin-top: 8px;
    vertical-align: middle;

    @media $desktop
      font-size: 1.6rem;
      margin-top: 0;

  > .item > .inner > .content > .link > .ico-link
    font-size: 1.2rem;
    margin-left: 4px;

    @media $desktop
      font-size: 1.4rem;
