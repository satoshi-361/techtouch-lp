.hero-message
  font-feature-settings: "palt";
  letter-spacing: 0.1rem;

  > .heading
    font-size: 3.6rem;
    font-weight: bold;
    line-height: 1;
    margin-top: 24px;

    @media $desktop
      font-size: 5rem;
      margin-top: 32px;

  > .subHeading
    font-size: 2.4rem;
    font-weight: bold;
    line-height: 1.7;

    @media $desktop
      font-size: 3.4rem;

  > .btn
      display: none;

      @media $desktop
        display: flex;
        margin-top: 48px;
