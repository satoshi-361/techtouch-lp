.hero-section-tlp
  width: 100%;
  color: $white;
  background: linear-gradient(90deg, #003FBA 0%, #8B0081 50%, #B30000 100%);
  padding: 0 24px;
  height: 100vh;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;

  @media $desktop
    padding: 0 120px;
    justify-content: flex-start;

  > .logo
    display: none;

    @media $desktop
      position: absolute;
      top: 64px;
      display: block;
      width: 160px;
      margin-bottom: 190px;

  > .logoMobile
    position: absolute;
    top: 24px;
    left: 24px;
    width 32px;

    @media $desktop
      display: none;

  > .headingArea > .heading
    font-family: 'Spartan', sans-serif;
    font-feature-settings: "palt";
    font-size: 4rem;
    font-weight: 800;
    letter-spacing: 0.1rem;
    line-height: 1.3;
    text-align: center;

    @media $desktop
      font-size: 7.4rem;
      text-align: left;

  > .headingArea > .subHeading
    font-size: 1.6rem;
    font-weight: bold;
    text-align: center;
    margin-top: 16px;

    @media $desktop
      font-size: 2.4rem;
      text-align: left;
      margin-top: 24px;
