.news-box
  margin: 64px auto 0;

  @media $desktop
    max-width: 640px;
    margin-top: 80px;

  > .title
    font-feature-settings: "palt";
    letter-spacing: 0.1rem;
    font-size: 2.2rem;
    font-weight: bold;
    text-align: center;
    margin-bottom: 48px;

    @media $desktop
      font-size: 3.2rem;
      margin-bottom: 64px;

  > .btn
    margin-top: 32px;

    @media $desktop
      margin-top: 48px;
