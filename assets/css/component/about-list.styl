.about-list
  > .item
    border-bottom: 1px solid lighten($gray, 30);
    padding-bottom: 16px;
    margin-bottom: 16px;

    &:last-child
      border-bottom: none;
      padding-bottom: 0;
      margin-bottom: 0;

  > .item > .inner
    @media $desktop
      display: flex;
      align-items: flex-start;

  > .item > .inner > .heading
    font-size: 1.4rem;
    font-weight: bold;
    margin-bottom: 8px;

    @media $desktop
      flex: 0 0 112px;
      line-height: 1.5;

  > .item > .inner > .content
    color: darken($gray, 25);
    font-size: 1.6rem;
    line-height: 1.5;

  > .item > .inner > .content > .text-link
    margin-top: 8px;

  > .item > .inner > .content > .text-link > .ico-link
    font-size: 1.2rem;
    margin-left: 4px;

    @media $desktop
      font-size: 1.4rem;
