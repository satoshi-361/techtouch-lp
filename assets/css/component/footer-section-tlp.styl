.footer-section-tlp
  width: 100%;
  color: $white;
  background-color: #101010;
  padding: 120px 24px 24px;
  display: flex;
  justify-content: space-between;
  align-items: center;

  @media $desktop
    padding: 160px 120px 64px;

  > .nav
    display: flex;

  > .nav > .item
    font-size: 1.4rem;
    margin-right: 24px;

    @media $desktop
      font-size: 1.6rem;
      margin-right: 48px;

      &:hover
        text-decoration: underline;

  > .copyright
    color: white;
    font-size: 1.2rem;
    font-family: 'Open Sans', sans-serif;
    font-weight: $regular;
    line-height: 1;
    text-align: center;
